<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivImport"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="fill_horizontal"
        android:src="@drawable/importpic" />

    <Button
        android:id="@+id/bImport"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="@string/import_events"
        android:textSize="15sp"
        android:textColor="@color/buttonTextColor"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/ivExport"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="fill_horizontal"
        android:src="@drawable/exportpic" />

    <Button
        android:id="@+id/bExport"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:text="@string/export_events"
        android:textSize="15sp"
        android:textColor="@color/buttonTextColor"
        android:textStyle="bold"/>

</LinearLayout>